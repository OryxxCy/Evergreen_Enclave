<section class="section">
  <div class="columns is-centered">
    <div class="column is-half">
      <div class="box">
        <h2 class="title">Edit Profile</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :firstname, class: "label" %>
            <%= f.text_field :firstname, class: "input", autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :lastname, class: "label" %>
            <%= f.text_field :lastname, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :address, class: "label" %>
            <%= f.text_field :address, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :province_id, class: "label" %>
            <%= f.select :province_id, options_for_select(TaxRate.all.map { |rate| [rate.province, rate.id] }), class: "select" %>
          </div>

          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control">
              <%= f.email_field :email, class: "input", autocomplete: "email" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <div class="control">
              <%= f.submit "Update", class: "button is-primary" %>
            </div>
          </div>
        <% end %>
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control">
              <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
            </div>
            <% if @minimum_password_length %>
              <p class="help"><em><%= @minimum_password_length %> characters minimum</em></p>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "label" %>
            <div class="control">
              <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :current_password, class: "label" %>
            <div class="control">
              <%= f.password_field :current_password, class: "input", autocomplete: "current-password" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.submit "Change password", class: "button is-primary" %>
            </div>
          </div>
        <% end %>
        <div class="field">
          <h3 class="title">Delete account!</h3>
          <div class="control">
            <%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "button is-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>