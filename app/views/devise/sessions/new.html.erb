<section class="section">
  <div class="columns is-centered">
    <div class="column is-one-third">
      <div class="box">
        <h2 class="title is-4 has-text-centered">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control">
              <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control">
              <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <div class="control">
                <%= f.check_box :remember_me, class: "checkbox" %>
                <%= f.label :remember_me, class: "checkbox" %>
              </div>
            </div>
          <% end %>

          <div class="field">
            <div class="control">
              <%= f.submit "Log in", class: "button is-primary is-fullwidth" %>
            </div>
          </div>
        <% end %>
      </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>