<section class="section">
  <% if @status.nil? %>
    <h1 class="title has-text-centered">Evergreen Enclave Plants</h1>
  <% else %>
    <% if @plants.empty? %>
      <h1 class="title has-text-centered">No <%= @status %> Products</h1>
    <% else %>
      <h1 class="title is-1">
        <%= @status %> Products
      </h1>
    <% end %>
  <% end %>
  <ul class="columns is-multiline">
    <% @plants.each do |plant| %>
      <li class="column is-one-third">
        <div class="box has-text-centered">
          <% if plant.image.present?%>
              <figure class="is-justify-content-center">
                <%= image_tag(plant.image, alt: "#{plant.name} Image") %>
              </figure>
          <%end%>
          <p class="title is-5"><%= link_to plant.name, plant %></p>
          <p class="content">CA$<%= plant.price %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <% if @plants.count >= 12%>
    <%= paginate @plants%>
  <% end%>
</section>
