<% content_for(:html_title) {@type.name}%>
<section class="section">
  <h1 class="title is-1">
    <%= @type.name%> Products
  </h1>
  <div class="box">
    <ul class="columns is-multiline">
      <% if @type.plants.present? %>
        <% @type.plants.each do |plant| %>
          <li class="column is-one-third">
            <div class="box">
              <% if plant.image.present?%>
                <%= image_tag(plant.image, alt: "#{plant.name} Image", class: 'image is-128x128') %>
              <%end%>
              <p class="title is-5"><%= link_to plant.name, plant %></p>
              <p class="content">$<%= plant.price %></p>
            </div>
          </li>
        <% end %>
      <% else %>
        <li class="column">
          <p>None</p>
        </li>
      <% end %>
    </ul>
  </div>
</section>